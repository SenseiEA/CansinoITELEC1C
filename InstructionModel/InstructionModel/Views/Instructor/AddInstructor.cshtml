
@model Instructor;

<h1>Add Instructor</h1>
<br />
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="AddInstructor" method="post">
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control"/>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsTenured">Are they Tenured</label><br/>
        <select asp-for="IsTenured" asp-items="Html.GetEnumSelectList(typeof(IsTenured))" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="Rank">Rank</label>
        <select asp-for="Rank" asp-items="Html.GetEnumSelectList(typeof(Rank))" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="HiringDate">Date Hired</label>
        <input type="date" asp-for="HiringDate" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

</form>
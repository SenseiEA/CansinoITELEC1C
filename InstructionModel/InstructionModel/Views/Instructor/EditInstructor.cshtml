
@model Instructor;

<h1>Edit Instructor</h1>

<form asp-action="EditInstructor" method="post">
    <div class="form-group">
        <label asp-for="Id">ID</label>
        <input asp-for="Id" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IsTenured">Are they Tenured</label><br/>
        <label for="html">Permanent</label><br />
        <input type="radio" asp-for="IsTenured" value="HTML"/><br />
        <label for="css">Probationary</label><br />
        <input type="radio" asp-for="IsTenured" value="CSS"/>
    </div>
    <div class="form-group">
        <label asp-for="Rank">Rank</label>
        <select asp-for="Rank" asp-items="Html.GetEnumSelectList(typeof(Rank))" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="HiringDate">Date Hired</label>
        <input type="date" asp-for="HiringDate" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <button type="button" onclick="history.back()" class="btn btn-default">Cancel</button>

</form>
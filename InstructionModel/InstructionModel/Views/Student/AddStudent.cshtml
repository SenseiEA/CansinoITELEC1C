
@model Student;

<h1>Add Student</h1>

<form asp-action="AddStudent" method="post" style="margin-top: 5px">
    <div class="form-group">
        <label asp-for="Id">ID</label>
        <input asp-for="Id" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Course">Course</label>
        <select asp-for="Course" asp-items="Html.GetEnumSelectList(typeof(Course))" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="DateEnrolled">Date Enrolled</label>
        <input type="date" asp-for="DateEnrolled" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

</form>
